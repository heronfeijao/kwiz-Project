<% if (user) { %>
  <% for (const card of db) { %>
    <% if (!card.public) { %>
      <article class="col-lg-4 col-md-5 col-12 d-flex align-items-stretch">
        <div class="row card kwizcard">
          <img src="<%= card.imageurl %>" class="card-img-top img-fluid" alt="quizimg">
          <div class="card-body">
            <h5 class="card-title">
              <%= card.title %> KWIZ
            </h5>
            <p class="card-text">
              <%= card.description %>
            </p>
          </div>
          <div class="row mb-2 d-flex mz justify-content-evenly">
            <a href="/kwiz/<%= card.id %>" class="btn btn-primary cardbtn">TAKE KWIZ!</a>
            <a href="/kwiz/<%= card.id %>" class="btn btn-primary cardbtn">SHARE!</a>
          </div>
        </div>
      </article>
      <% } %>
        <% } %>
          <% } %>
